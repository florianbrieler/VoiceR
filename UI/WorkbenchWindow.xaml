<Window x:Class="VoiceR.WorkbenchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VoiceR - Workbench">
    <Grid Padding="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="LeftColumn" Width="300" MinWidth="150"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" MinWidth="400"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Header + TreeView -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header with metrics -->
            <TextBlock Grid.Row="0"
                       Text="UI Elements" 
                       FontWeight="SemiBold"
                       FontSize="14"
                       Margin="0,0,0,8"/>
            
            <TextBlock Grid.Row="1"
                       x:Name="UIElementsDetails"
                       Margin="0,0,0,8"/>
                
            <ToggleButton Grid.Row="2"
                          x:Name="TreeViewToggle"
                          Content="Full tree"
                          Click="TreeViewToggle_Click"
                          Padding="12,6"/>

            <!-- TreeView for UI elements -->
            <TreeView Grid.Row="3"
                      x:Name="UITreeView"
                      SelectionMode="Single"
                      CanDragItems="False"
                      AllowDrop="False"
                      ContextRequested="TreeView_ContextRequested">
                <TreeView.ItemTemplate>
                    <DataTemplate>
                        <ContentPresenter Content="{Binding Content}"/>
                    </DataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </Grid>

        <!-- Draggable Divider -->
        <Border Grid.Column="1"
                x:Name="DividerBorder"
                Width="8"
                Background="Transparent"
                Margin="4,0"
                CornerRadius="4"
                PointerPressed="Divider_PointerPressed"
                PointerMoved="Divider_PointerMoved"
                PointerReleased="Divider_PointerReleased"
                PointerEntered="Divider_PointerEntered"
                PointerExited="Divider_PointerExited">
            <Border Width="4"
                    Background="{ThemeResource ControlStrokeColorDefaultBrush}"
                    CornerRadius="2"
                    HorizontalAlignment="Center"/>
        </Border>

        <!-- Right Panel with three columns -->
        <Grid Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Column 1: Request JSON -->
            <Grid Grid.Column="0" Margin="0,0,8,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" 
                           Text="Request" 
                           FontWeight="SemiBold"
                           FontSize="14"
                           Margin="0,0,0,8"/>
                
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto">
                    <TextBox x:Name="RequestJsonTextBox"
                             IsReadOnly="True"
                             TextWrapping="NoWrap"
                             AcceptsReturn="True"
                             FontFamily="Consolas"
                             FontSize="12"
                             Padding="12"
                             BorderThickness="1"
                             Background="{ThemeResource LayerFillColorDefaultBrush}"
                             BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"/>
                </ScrollViewer>
            </Grid>

            <!-- Column 2: Prompt Input with Go Button -->
            <Grid Grid.Column="1" Margin="8,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Voice controls row -->
                <TextBlock Grid.Row="0" 
                           Text="Voice" 
                           FontWeight="SemiBold"
                           FontSize="14"
                           Margin="0,0,0,8"/>
                
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            Spacing="8"
                            Margin="0,0,0,8"
                            VerticalAlignment="Center">
                    <Ellipse x:Name="VoiceStatusIndicator"
                             Width="12"
                             Height="12"
                             Fill="#4CAF50"
                             VerticalAlignment="Center"/>
                    <Button x:Name="ListenButton"
                            Content="Listen"
                            Click="ListenButton_Click"
                            Padding="12,6"/>
                    <Button x:Name="ReplayButton"
                            Content="Replay"
                            Click="ReplayButton_Click"
                            IsEnabled="False"
                            Padding="12,6"/>
                </StackPanel>
                
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            Spacing="8"
                            Margin="0,0,0,8"
                            VerticalAlignment="Center">
                    <ComboBox x:Name="WhisperModelComboBox"
                              MinWidth="120"
                              SelectionChanged="WhisperModelComboBox_SelectionChanged"/>
                    <CheckBox x:Name="AutoProcessCheckBox"
                              Content="Auto Process"
                              VerticalAlignment="Center"
                              Margin="8,0,0,0"/>
                </StackPanel>
                
                <TextBlock Grid.Row="3"
                           x:Name="AudioDetails"
                           Text="-"
                           Margin="0,0,0,8"/>
                
                <!-- Prompt row -->
                <TextBlock Grid.Row="4" 
                           Text="Prompt" 
                           FontWeight="SemiBold"
                           FontSize="14"
                           Margin="0,24,0,8"/>

                <ScrollViewer Grid.Row="5"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto">
                    <TextBox x:Name="PromptTextBox"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             IsSpellCheckEnabled="False"
                             FontFamily="Consolas"
                             FontSize="12"
                             Padding="12"
                             BorderThickness="1"
                             PlaceholderText="Enter your prompt here..."
                             Background="{ThemeResource LayerFillColorDefaultBrush}"
                             BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                             PreviewKeyDown="PromptTextBox_PreviewKeyDown"/>
                </ScrollViewer>
                
                <StackPanel Grid.Row="6"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Spacing="8"
                            Margin="0,12,0,0">
                    <ComboBox x:Name="ModelComboBox"
                              MinWidth="220"
                              SelectedIndex="0"/>
                    <Button x:Name="GoButton"
                            Content="Go"
                            Padding="24,8"
                            Click="GoButton_Click"/>
                </StackPanel>
            </Grid>

            <!-- Column 3: Response JSON -->
            <Grid Grid.Column="2" Margin="8,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0"
                           x:Name="ResponseLabel"
                           Text="Response" 
                           FontWeight="SemiBold"
                           FontSize="14"
                           Margin="0,0,0,8"/>
                
                <TextBlock Grid.Row="1"
                           x:Name="ResponseDetails"
                           Text="-"
                           Margin="0,0,0,8"/>
                
                <ScrollViewer Grid.Row="2"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto">
                    <TextBox x:Name="ResponseTextBox"
                             IsReadOnly="True"
                             TextWrapping="NoWrap"
                             AcceptsReturn="True"
                             FontFamily="Consolas"
                             FontSize="12"
                             Padding="12"
                             BorderThickness="1"
                             Background="{ThemeResource LayerFillColorDefaultBrush}"
                             BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"/>
                </ScrollViewer>
                
                <StackPanel Grid.Row="3"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Spacing="8"
                            Margin="0,12,0,0">
                    <Button x:Name="ExecuteButton"
                            Content="Execute"
                            Padding="24,8"
                            IsEnabled="False"
                            Click="ExecuteButton_Click"/>
                    <CheckBox x:Name="AutoExecuteCheckBox"
                              Content="Auto Execute"
                              VerticalAlignment="Center"
                              Margin="8,0,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
