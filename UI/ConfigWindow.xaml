<Window x:Class="VoiceR.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VoiceR - Configuration">
    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- OpenAI API Key -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="OpenAI API Key" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,8"/>
            <TextBox x:Name="ApiKeyTextBox"
                     PlaceholderText="Enter your OpenAI API key"
                     Padding="12"
                     BorderThickness="1"
                     Background="{ThemeResource LayerFillColorDefaultBrush}"
                     BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"/>
        </StackPanel>

        <!-- Max Depth -->
        <StackPanel Grid.Row="1" Margin="0,0,0,16">
            <TextBlock Text="Max Depth" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,8"/>
            <NumberBox x:Name="MaxDepthNumberBox"
                       PlaceholderText="Enter max depth (default: 10)"
                       Minimum="1"
                       Maximum="20"
                       Value="10"
                       SpinButtonPlacementMode="Inline"
                       Padding="12"
                       BorderThickness="1"
                       Background="{ThemeResource LayerFillColorDefaultBrush}"
                       BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"/>
        </StackPanel>

        <!-- System Prompt Label -->
        <TextBlock Grid.Row="2" 
                   Text="System Prompt" 
                   FontWeight="SemiBold"
                   Margin="0,0,0,8"/>

        <!-- System Prompt TextBox -->
        <ScrollViewer Grid.Row="3"
                      VerticalScrollBarVisibility="Auto"
                      Margin="0,0,0,16">
            <TextBox x:Name="SystemPromptTextBox"
                     PlaceholderText="Enter the system prompt for the LLM"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     IsSpellCheckEnabled="False"
                     MinHeight="200"
                     Padding="12"
                     BorderThickness="1"
                     Background="{ThemeResource LayerFillColorDefaultBrush}"
                     BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"/>
        </ScrollViewer>

        <!-- Save Button -->
        <Button Grid.Row="4"
                Content="Save"
                HorizontalAlignment="Right"
                Padding="24,10"
                Click="SaveButton_Click"/>
    </Grid>
</Window>

