<UserControl x:Class="VoiceR.TrayMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Background="White"
            CornerRadius="8"
            BorderThickness="0"
            Padding="4"
            MinWidth="200">
        <Border.Shadow>
            <ThemeShadow />
        </Border.Shadow>
        <StackPanel Spacing="2">
            <!-- App Icon Header -->
            <Border Height="48"
                    Margin="8,8,8,4"
                    HorizontalAlignment="Center">
                <Image Source="/Assets/VoiceR.png"
                       Width="32"
                       Height="32"
                       Stretch="Uniform"/>
            </Border>
            
            <Border Height="1"
                    Background="#E0E0E0"
                    Margin="4,0,4,2"/>
            
            <!-- Menu Items -->
            <Button Content="Start"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Padding="12,10"
                    Click="StartButton_Click"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="#000000"/>
            
            <Button Content="Configure"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Padding="12,10"
                    Click="ConfigureButton_Click"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="#000000"/>
            
            <Border Height="1"
                    Background="#E0E0E0"
                    Margin="4,2,4,2"/>
            
            <Button Content="Quit"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Padding="12,10"
                    Click="QuitButton_Click"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="#000000"/>
        </StackPanel>
    </Border>
</UserControl>

