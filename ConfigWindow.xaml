<Window x:Class="VoiceR.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VoiceR - Configuration">
    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- OpenAI API Key -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="OpenAI API Key" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,8"/>
            <TextBox x:Name="ApiKeyTextBox"
                     PlaceholderText="Enter your OpenAI API key"
                     Padding="12"
                     BorderThickness="1"
                     Background="{ThemeResource LayerFillColorDefaultBrush}"
                     BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"/>
        </StackPanel>

        <!-- System Prompt Label -->
        <TextBlock Grid.Row="1" 
                   Text="System Prompt" 
                   FontWeight="SemiBold"
                   Margin="0,0,0,8"/>

        <!-- System Prompt TextBox -->
        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto"
                      Margin="0,0,0,16">
            <TextBox x:Name="SystemPromptTextBox"
                     PlaceholderText="Enter the system prompt for the LLM"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     IsSpellCheckEnabled="False"
                     MinHeight="200"
                     Padding="12"
                     BorderThickness="1"
                     Background="{ThemeResource LayerFillColorDefaultBrush}"
                     BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"/>
        </ScrollViewer>

        <!-- Save Button -->
        <Button Grid.Row="3"
                Content="Save"
                HorizontalAlignment="Right"
                Padding="24,10"
                Click="SaveButton_Click"/>
    </Grid>
</Window>

